@model IEnumerable<SAOnlineMart.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <h1 class="my-4">Welcome to SA Online Mart</h1>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Price: @product.Price.ToString("C")</p>
                        <a href="@Url.Action("ProductDetail", new { id = product.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
